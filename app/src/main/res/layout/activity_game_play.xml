<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11213A"
    android:orientation="vertical"
    tools:context=".gamePlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvPlayer1"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/tvPlayer2"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Player 2"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:textAlignment="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">

        <TextView

            android:id="@+id/tvPlayer1sc"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:textAlignment="center"

            />
        <TextView
            android:id="@+id/tvPlayer2sc"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:textAlignment="center"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="80dp">


        <Button
            android:id="@+id/boxBtn0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/boxBtn1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/boxBtn2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >


        <Button
            android:id="@+id/boxBtn3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/boxBtn4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/boxBtn5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >


        <Button
            android:id="@+id/boxBtn6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/boxBtn7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/boxBtn8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#413F43"
            android:textSize="40sp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>



    </LinearLayout>
    <Button
        android:id="@+id/ResetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:backgroundTint="#DC9E21"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/playerStatues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        />

</LinearLayout>